<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.islam.gotomarketdynamicstask.MainActivity">

    <Button
        android:id="@+id/facebook_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/search_activity"
        app:layout_constraintEnd_toEndOf="@+id/facebook_btn"
        app:layout_constraintStart_toStartOf="@+id/facebook_btn"
        app:layout_constraintTop_toBottomOf="@+id/facebook_btn" />

    <Button
        android:id="@+id/contact_btn"
        android:text="@string/contact_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/facebook_btn"
        app:layout_constraintStart_toStartOf="@+id/facebook_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_btn" />

    <Button
        android:text="@string/map_activity"
        android:id="@+id/map_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/contact_btn"
        app:layout_constraintStart_toStartOf="@+id/contact_btn"
        app:layout_constraintTop_toBottomOf="@+id/contact_btn" />

    <Button
        android:id="@+id/calender_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="calender activity"
        app:layout_constraintEnd_toEndOf="@+id/map_btn"
        app:layout_constraintStart_toStartOf="@+id/map_btn"
        app:layout_constraintTop_toBottomOf="@+id/map_btn" />

</android.support.constraint.ConstraintLayout>
